# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=identity_db
DB_USER=identity_user
DB_PASSWORD=identity_pass
DB_SCHEMA=identity

# OTP Configuration
EMAIL_OTP_ENABLED=true
SMS_OTP_ENABLED=false
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# SendGrid Configuration (Email OTP)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@itadias.com
SENDGRID_FROM_NAME=ITADIAS Identity Service

# Twilio Configuration (SMS OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_PHONE=

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=identity_events

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
PORT=8001