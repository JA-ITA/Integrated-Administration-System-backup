# Certificate Service Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
PORT=8006

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=certificate_db
DB_USER=certificate_user
DB_PASSWORD=certificate_pass
DB_SCHEMA=certificate

# Storage Configuration (MinIO for development, S3 for production)
STORAGE_BACKEND=minio
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
CERTIFICATES_BUCKET=certificates
PRESIGNED_URL_EXPIRY=3600

# For S3 (uncomment when using AWS S3)
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_ENDPOINT_URL=  # Leave empty for AWS S3

# Certificate Service Configuration
TEMPLATE_ENGINE=handlebars
PDF_SERVICE_URL=http://localhost:3001
CERTIFICATE_MAX_AGE_DAYS=365
QR_CODE_ENABLED=true
QR_BASE_URL=https://certificates.itadias.com/verify

# ITADIAS Branding
BRAND_COLOR=#006B54
LOGO_PATH=/assets/itadias-logo.png
FONT_FAMILY=Roboto

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=certificate_events